            $(function () {
                $('.date').datetimepicker({
                    dateFormat: 'dd-mm-yy',
                    minDate: getFormattedDate(new Date())
                });

                function getFormattedDate(date) {
                    var day = date.getDate();
                    var month = date.getMonth() + 1;
                    var year = date.getFullYear().toString().slice(2);
                    return day + '-' + month + '-' + year;
                }
            });
